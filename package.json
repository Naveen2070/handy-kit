{
  "name": "@handy/kit",
  "version": "0.4.0",
  "description": "A collection of handy CLI tools (license-gen, git-standup).",
  "main": "dist/bin/handy-kit.js",
  "bin": {
    "handy-kit": "dist/bin/handy-kit.js"
  },
  "engines": {
    "node": ">=18.17"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Naveen2070/handy-kit.git"
  },
  "prepare": "npm run build",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cli",
    "license",
    "git",
    "standup"
  ],
  "author": "Naveen R",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run copy-assets",
    "copy-assets": "cpx \"assets/**/*\" dist/assets"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "cpx": "^1.2.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
